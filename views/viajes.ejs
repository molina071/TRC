            </li>

            <!-- Divider -->
            <hr class="sidebar-divider d-none d-md-block">

        </ul>
        <img src="/images/logoBus.png" alt="fondo" class="fondoimg">


        <div class="container mt-5">
            <div class="card shadow-lg">
                <div class="card-header text-white text-center">
                    <h4 class="mb-0">Registro de Viaje</h4>
                </div>
                <div class="card-body">
                    <form id="viajeForm" action="/viajes/create" method="POST">


                        <div class="mb-3">
                            <label class="form-label">Viaje Registrado por:</label>
                            <input type="text" class="form-control" name="usuario_vj" value="<%= usuario.us_nombre %>"
                                readonly required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Sucursal</label>
                            <select class="form-select" id="sucursalSelect" name="sucursal_vj" required>
                                <option>Seleccione una Sucursal</option>
                                <%sucursales.forEach(suc=> { %>
                                    <option value="<%= suc.sc_id %>">
                                        <%= suc.sc_nombre %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>


                        <div class="mb-3">
                            <label class="form-label">Colaborador</label>
                            <select class="form-select" id="colaboradorSelect" name="colaborador_vj" multiple size=""
                             >
                            </select>
                        </div>


                        <div class="mb-3">
                            <label class="form-label">Recorrido (km)</label>
                            <input type="text" class="form-control" id="distanciaColab" name="vj_recorrido" readonly
                                required>
                        </div>


                        <div class="mb-3">
                            <label class="form-label">Transportista</label>
                            <select class="form-select" id="transportista" name="transportista_vj" required>
                                <option>Seleccione un Transportista</option>
                                <% transportista.forEach(tr=> { %>
                                    <option value="<%= tr.tr_id %>" data-tarifa="<%= tr.tr_tarifa %>">
                                        <%= tr.tr_nombre %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>

                        <div class=" mb-3">
                            <label class="form-label">Tarifa del transportista por km</label>
                            <input type="text" class="form-control tarifa-transportista-input" id="tarifa"
                                name="tarifa_vj" readonly required>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Costo total del viaje</label>
                            <input type="text" class="form-control" id="costoViaje" name="costo_vj" readonly required>
                        </div>


                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger px-4">
                                <i class="bi bi-save"></i> Guardar
                            </button>
                            <button type="button" class="btn btn-primary px-4" onclick="calcularCostoViaje()">
                                <i class="bi bi-x-circle"></i> calcular
                            </button>
                            <a type="submit" class="btn btn-secondary px-4" href="/viajes">
                                <i class="bi bi-x-circle"></i> limpiar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

        </div>




        <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.js"></script>
        <script src="/js/viajes.js"></script>

    </div>

