        <div class="crud">
            <h1 class="fw-bold titulo">Colaboradores</h1>
        </div>

        <!--BARRA DE BUSQUEDA-->
        <div class="input_search d-flex align-items-center gap-2">
            <form action="" method="" class="px-4 py-3 login">
                <!--NO OLVIDAR DEFINIR LA RUTA AQUI Y EL METODO POST-->
                <div class="mb-3">
                    <input type="text" class="input" placeholder="Buscar colaborador..." name="correo"
                        style="width: 1000px;">
                    <button type="submit" class="btn btn-success buscar">Buscar</button>
                    <button type="button" class="btn btn-primary crear" onclick="toggleForm()">Administrar
                        Sucursales</button>
                </div>
            </form>
        </div>

        <!--FORMULARIO OCULTO-->

        <div class="overlay" id="overlay">
            <div class="form-container">
                <h2>Nuevo Registro</h2>
                <form action="/colaboradores/create" method="post">

                    <label for="cl_cedula">Cedula:</label>
                    <input type="text" id="cl_cedula" name="cedula" maxlength="13" required>

                    <label for="sc_id">Sucursal:</label>
                    <select id="sc_id" name="sucursal" required>
                        <%sucursales.forEach(sucursal=> { %>
                            <option value="<%=sucursal.sc_id%>">
                                <%=sucursal.sc_nombre%>
                            </option>
                            <% }); %>
                    </select>

                    <label for="cl_nombre">Nombre:</label>
                    <input type="text" id="cl_nombre" name="nombre" maxlength="50" required>

                    <label for="cl_apellido">Apellido:</label>
                    <input type="text" id="cl_apellido" name="apellido" maxlength="50" required>

                    <label for="cl_direccion">Dirección:</label>
                    <textarea id="cl_direccion" name="direccion" required></textarea>

                    <label for="cl_distancia_km">Distancia (km):</label>
                    <input type="number" id="cl_distancia_km" name="distancia" required>


                    <button type="submit" class="btn-submit">Guardar</button>
                </form>
            </div>
        </div>

        <!--TABLA DEL CRUD-->

        <div class="table-responsive px-5 py-3 tabla">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>

                    </tr>
                </thead>
                <tbody>

                    <% colaboradores.forEach(colaborador=> { %>
                        <tr>
                            <td>
                                <%=colaborador.cl_cedula%>
                            </td>
                            <td>
                                <%=colaborador.cl_nombre%>
                            </td>
                            <td>
                                <%=colaborador.cl_apellido%>
                            </td>
                            <td>
                                <%=colaborador.cl_direccion%>
                            </td>
                            <td>
                                <%=colaborador.cl_estado%>
                            </td>
                            <td>

                                <button class="btn btn-warning btn-editar"
                                    data-id="<%= colaborador.cl_cedula %>">Editar</button>
                            </td>

                            <td>

                                <form action="/colaboradores/delete/<%= colaborador.cl_cedula %>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-pencil"></i> Eliminar
                                    </button>
                                </form>

                               

                            </td>
                        </tr>
                        <% }); %>
                            <!--TENGO QUE INDICARLE A SEQUELIZE QUE LLENE LA TABLA INTERMEDIA PARA QUE SE MUESTRE-->
                </tbody>
            </table>
        </div>


        <!-- NUEVO FORMULARIO OCULTO  PARA EDIT-->

        <div class="modal fade" id="modalColaborador" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form action="/colaboradores/update" method="POST">
                        <div class="modal-header">
                            <h5 class="modal-title">Editar Colaborador</h5>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label>Cédula</label>
                                <input type="text" name="up_cedula" id="up_cedula" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label>Sucursal</label>
                                <select name="up_sucursal" id="up_sucursal" class="form-select" required>

                                    <%sucursales.forEach(sucursal=> { %>
                                        <option value="<%=sucursal.sc_id%>">
                                            <%=sucursal.sc_nombre%>
                                        </option>
                                        <% }); %>

                                </select>
                            </div>
                            <div class="mb-3">
                                <label>Nombre</label>
                                <input type="text" name="up_nombre" id="up_nombre" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label>Apellido</label>
                                <input type="text" name="up_apellido" id="up_apellido" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label>Dirección</label>
                                <input type="text" name="up_direccion" id="up_direccion" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label>Distancia (km)</label>
                                <input type="number" name="up_distancia" id="up_distancia" class="form-control">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

</body>

<script>
    document.querySelectorAll('.btn-editar').forEach(btn => {
        btn.addEventListener('click', async () => {
            const id = btn.dataset.id;

            
            const res = await fetch(`/colaboradores/update/${id}`);
            const data = await res.json();

            // Rellenar formulario
            document.getElementById('up_cedula').value = data.cl_cedula;
            //document.getElementById('sucursal').value = data.sucursal;
            document.getElementById('up_nombre').value = data.cl_nombre;
            document.getElementById('up_apellido').value = data.cl_apellido;
            document.getElementById('up_direccion').value = data.cl_direccion;
            document.getElementById('up_distancia').value = 0;

            const modal = new bootstrap.Modal(document.getElementById('modalColaborador'));
            modal.show();
        });
    });

</script>


