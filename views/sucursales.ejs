        <div class="crud">
            <h1 class="fw-bold titulo">sucursales</h1>
        </div>

        <div class="input_search d-flex align-items-center gap-2">
            <form action="" method="post" class="px-4 py-3 login">
                <div class="mb-3">
                    <input type="text" class="input" placeholder="Buscar colaborador" name="correo"
                        style="width: 1000px;">
                    <button type="submit" class="btn btn-success buscar">Buscar</button>
                    <button type="button" class="btn btn-primary crear" onclick="toggleForm()">Registrar
                        Sucursal</button>
                </div>
            </form>
        </div>


        <!--FORMULARIO OCULTO-->

        <div class="overlay" id="overlay">
            <div class="form-container">
                <h2>Resgistrar sucursal</h2>
                <form action="/sucursales/create" method="post">

                    <label for="cl_nombre">Nombre:</label>
                    <input type="text" id="cl_nombre" name="nombre" maxlength="50" required>

                    <label for="cl_apellido">Direccion:</label>
                    <textarea type="text" id="cl_apellido" name="direccion" maxlength="100" required></textarea>

                    <button type="submit" class="btn-submit">Guardar</button>
                </form>
            </div>
        </div>



        <div class="table-responsive px-5 py-3 tabla">
            <table class="table table-striped table-hover align-middle">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Direccion</th>
                        <th scope="col">Editar</th>
                        <th scope="col">Eliminar</th>
                    </tr>
                </thead>
                <tbody>

                    <%sucursales.forEach(scu=> { %>
                        <tr>
                            <td>
                                <%=scu.sc_id%>
                            </td>
                            <td>
                                <%=scu.sc_nombre%>
                            </td>
                            <td>
                                <%=scu.sc_direccion%>
                            </td>
                            <td>
                                <button class="btn btn-warning btn-editar"
                                    data-id="<%= scu.sc_id %>">Actualizar</button>
                            </td>

                            <td>
                                <form action="/sucursales/delete/<%= scu.sc_id%>" method="POST" style="display:inline;">
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-pencil"></i> Eliminar
                                    </button>
                                </form>

                            </td>
                        </tr>

                        <% }); %>
                </tbody>
            </table>
        </div>


        <!-- NUEVO FORMULARIO OCULTO  PARA EDIT-->

        <div class="modal fade" id="modalSucursales" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form action="/sucursales/update" method="POST"> 
                        <div class="modal-header">
                            <h5 class="modal-title">Editar Sucursales</h5>
                        </div>
                        <div class="modal-body">
                            <div class="mb-3">
                                <label>ID</label>
                                <input type="number" name="up_id" id="up_id" class="form-control" readonly>
                            </div>

                            <div class="mb-3">
                                <label>Nombre</label>
                                <input type="text" name="up_nombre" id="up_nombre" class="form-control">
                            </div>
                            <div class="mb-3">
                                <label>Direcci√≥n</label>
                                <input type="text" name="up_direccion" id="up_direccion" class="form-control">
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="botonActualizar">Actualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</body>
